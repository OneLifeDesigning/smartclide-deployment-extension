{
  "name": "smartclide-deployment-widget",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
    "theia-widget"
  ],
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@theia/core": "1.19.0",
    "@theia/git": "1.19.0",
    "@theia/output": "1.19.0",
    "@types/node": "16.11.9",
    "recharts": "2.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "prettier": "^2.7.1",
    "rimraf": "latest",
    "ts-node": "9.1.1",
    "typescript": "latest"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "scripts": {
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/widget-frontend-module",
      "backend": "lib/node/backend-module"
    }
  ]
}
